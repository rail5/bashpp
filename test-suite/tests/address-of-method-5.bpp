# Test case: Getting the address of a method via self_reference (rvalue)
# Where the method in question is virtual and must be found by a vtable lookup

@class Test {
	@virtual @public @method something {
		echo "Hello, World!"
		exit
	}

	@constructor {
		trap "&@this.something" EXIT
	}
}
@Test object # Should output "Hello, World!" on exit if we've successfully taken the address of "@this.something"
