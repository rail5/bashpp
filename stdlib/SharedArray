@include_once "SharedObject"

if ! command -v wc &> /dev/null; then
	>&2 echo "Bash++: SharedArray requires the 'wc' command to be available."
	exit 1
fi
if ! command -v base64 &> /dev/null; then
	>&2 echo "Bash++: SharedArray requires the 'base64' command to be available."
	exit 1
fi
if ! command -v sed &> /dev/null; then
	>&2 echo "Bash++: SharedArray requires the 'sed' command to be available."
	exit 1
fi

## Array that can be shared between multiple concurrent processes
##
## Reads and writes are atomic and concurrency-safe.
## The array can be encrypted for security.
## Internally, it uses the file system to store the array state.
@class SharedArray : SharedObject {
	## the number of elements in the shared array.
	## @outputs The number of elements in the shared array.
	@virtual @public @method size {
		@this._lock
		wc -l 2>/dev/null < @this.object_file || echo 0
		@this._unlock
	}

	## Add a value to the end of the shared array.
	## @param value The value to add to the shared array.
	@virtual @public @method push value {
		@this.used=1
		@this._lock
		if [[ @this.encrypted -eq 1 ]]; then
			value="@(openssl enc -aes-256-cbc -pbkdf2 -pass pass:@this.encryption_key -a -A <<<"$value")"
		fi
		printf "%s" "$value" | base64 -w0 >> "@this.object_file"
		echo >> "@this.object_file"
		@this._unlock
	}

	## @ignore
	@private @method _get_front {
		local first_line=@(sed -n 1p "@this.object_file" | base64 -d)
		if [[ -z "$first_line" ]]; then
			return 1
		fi
		if [[ @this.encrypted -eq 1 ]]; then
			printf "%s" "$first_line" | openssl enc -d -aes-256-cbc -pbkdf2 -pass pass:@this.encryption_key -a -A
		else
			echo "$first_line"
		fi
	}

	## @ignore
	@private @method _get_back {
		local last_line=@(sed -n '$p' "@this.object_file" | base64 -d)
		if [[ -z "$last_line" ]]; then
			return 1
		fi
		if [[ @this.encrypted -eq 1 ]]; then
			printf "%s" "$last_line" | openssl enc -d -aes-256-cbc -pbkdf2 -pass pass:@this.encryption_key -a -A
		else
			echo "$last_line"
		fi
	}

	## Remove and echo the last element of the shared array.
	## @outputs The last element of the shared array.
	## @returns 1 if the shared array is empty, 0 otherwise.
	@virtual @public @method pop {
		@this.used=1
		@this._lock

		@this._get_back
		if [[ $? -ne 0 ]]; then
			@this.unlock
			return 1
		fi

		sed -i.tmp '$d' "@this.object_file" && rm -f "@{this.object_file}.tmp"
		@this._unlock
	}

	## Insert a value at a specific index in the shared array.
	## @param index The index at which to insert the value.
	## @param value The value to insert into the shared array.
	## @returns 1 if the index is out of bounds, 0 otherwise.
	@virtual @public @method insert index value {
		@this.used=1
		if [[ $index -lt 0 || $index -gt @this.size ]]; then
			>&2 echo "Error: SharedArray: Index out of bounds."
			return 1
		fi
		@this._lock
		if [[ @this.encrypted -eq 1 ]]; then
			value="@(openssl enc -aes-256-cbc -pbkdf2 -pass pass:@this.encryption_key -a -A <<<"$value")"
		fi

		if [[ $index -eq @this.size ]]; then
			printf "%s" "$value" | base64 -w0 >> "@this.object_file"
			echo >> "@this.object_file"
			return 0
		fi

		local array_copy=(@(cat "@this.object_file"))
		>@this.object_file # Clear the file
		for ((i=0; i<index; i++)); do
			printf "%s" "${array_copy[i]}" >> "@this.object_file"
			echo >> "@this.object_file"
		done
		printf "%s" "$value" | base64 -w0 >> "@this.object_file"
		echo >> "@this.object_file"
		for ((i=index; i<${#array_copy[@]}; i++)); do
			printf "%s" "${array_copy[i]}" >> "@this.object_file"
			echo >> "@this.object_file"
		done
		@this._unlock
	}

	## Remove the value at a specific index from the shared array.
	## @param index The index of the value to remove.
	## @returns 1 if the index is out of bounds, 0 otherwise.
	@virtual @public @method remove index {
		@this.used=1
		if [[ $index -lt 0 || $index -ge @this.size ]]; then
			>&2 echo "Error: SharedArray: Index out of bounds."
			return 1
		fi
		@this._lock

		# Use sed to efficiently remove the line at the specified index
		sed -i.tmp "$((index + 1))d" "@this.object_file" && rm -f "@{this.object_file}.tmp"

		@this._unlock
	}

	## Get the value at a specific index in the shared array.
	## @param index The index of the value to retrieve.
	## @returns The value at the specified index, or an error if out of bounds.
	## @outputs The value at the specified index.
	@virtual @public @method at index {
		if [[ $index -lt 0 || $index -ge @this.size ]]; then
			>&2 echo "Error: SharedArray: Index out of bounds."
			return 1
		fi
		@this._lock
		local value=@(sed -n "$((index + 1))p" "@this.object_file" | base64 -d)
		if [[ @this.encrypted -eq 1 ]]; then
			value=@(printf "%s" "$value" | openssl enc -d -aes-256-cbc -pbkdf2 -pass pass:@this.encryption_key -a -A)
		fi
		echo "$value"
		@this._unlock
	}

	## Echo the first element of the shared array.
	## @outputs The first element of the shared array.
	## @returns 1 if the shared array is empty, 0 otherwise.
	@virtual @public @method front {
		@this._lock
		@this._get_front
		if [[ $? -ne 0 ]]; then
			@this._unlock
			return 1
		fi
		@this._unlock
	}

	## Echo the last element of the shared array.
	## @outputs The last element of the shared array.
	## @returns 1 if the shared array is empty, 0 otherwise.
	@virtual @public @method back {
		@this._lock
		@this._get_back
		if [[ $? -ne 0 ]]; then
			@this._unlock
			return 1
		fi
		@this._unlock
	}

	## Echo all elements of the shared array.
	## @outputs All elements of the shared array.
	@virtual @public @method all {
		@this._lock
		local array_copy=()
		while IFS= read -r line; do
			if [[ @this.encrypted -eq 1 ]]; then
				array_copy+=("@(printf "%s" "$line" | base64 -d | openssl enc -d -aes-256-cbc -pbkdf2 -pass pass:@this.encryption_key -a -A)")
			else
				array_copy+=("@(printf "%s" "$line" | base64 -d)")
			fi
		done < "@this.object_file"
		echo "${array_copy[@]}"
		@this._unlock
	}

	## Silently check if the shared array is empty.
	## @outputs nothing
	## @returns 0 if the shared array is empty, 1 otherwise.
	@virtual @public @method empty {
		if [[ @this.size -eq 0 ]]; then
			return 0
		else
			return 1
		fi
	}

	## Echo a slice of the shared array from start to end indices.
	## @param start The starting index of the slice (inclusive).
	## @param end The ending index of the slice (inclusive).
	## @outputs The elements in the specified slice (separated by spaces).
	## @returns 1 if the start index is greater than the end index or if the shared array is empty, 0 otherwise.
	@virtual @public @method slice start end {
		if [[ $start -gt $end || @this.size -eq 0 ]]; then
			return 1
		fi
		if [[ $start -lt 0 ]]; then
			start=0
		fi
		if [[ $end -ge @this.size ]]; then
			end=$(( @this.size - 1 ))
		fi
		@this._lock
		local array_copy=()
		while IFS= read -r line; do
			if [[ @this.encrypted -eq 1 ]]; then
				array_copy+=("@(printf "%s" "$line" | base64 -d | openssl enc -d -aes-256-cbc -pbkdf2 -pass pass:@this.encryption_key -a -A)")
			else
				array_copy+=("@(printf "%s" "$line" | base64 -d)")
			fi
		done < "@this.object_file"
		echo "${array_copy[@]:$start:$((end - start + 1))}"
		@this._unlock
	}

	## Remove all elements from the shared array.
	@virtual @public @method clear {
		@this._lock
		> "@this.object_file" # Clear the file
		@this._unlock
	}

}
