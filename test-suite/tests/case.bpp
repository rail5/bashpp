@class MyClass {
	@public member="default value"

	@public @method test {
		case "@this.member" in
			"case1") echo "case1" ;;
			"case2")
				echo "case2"
				;;
			"case3")
				echo "case3" ;;
			*) echo "default"
				;;
		esac
	}

	@public @method update val {
		@this.member="$val"
	}
}

@MyClass myObject
@myObject.test # "default"
@myObject.update "case1"
@myObject.test # "case1"
@myObject.update "case2"
@myObject.test # "case2"
@myObject.update "case3"
@myObject.test # "case3"