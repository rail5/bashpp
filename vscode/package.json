{
  "name": "bashpp",
  "displayName": "Bash++",
  "description": "Syntax highlighting for Bash++",
  "version": "0.5.1",
  "homepage": "https://bpp.sh",
  "publisher": "rail5",
  "repository": {
    "type": "git",
    "url": "https://github.com/rail5/bashpp.git"
    },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "icon": "icon.png",
  "contributes": {
    "languages": [{
      "id": "bashpp",
      "aliases": ["Bash++", "bashpp"],
      "extensions": [".bpp"],
      "firstLine": "^#!.*\\b(bpp)\\b",
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "bashpp",
      "scopeName": "source.bashpp",
      "path": "./syntaxes/bashpp.tmLanguage.json"
    }]
  }
}
